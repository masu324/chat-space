.wrapper
  .side-bar
    .side-bar__side-header
      .side-bar__side-header__side-box
        %p.side-bar__side-header__side-box__username
          = current_user.name
        %ul.side-bar__side-header__side-box__menu
          %li.side-bar__side-header__edit-user
            = link_to new_group_path do
              =icon('fas', "edit")
          %li.side-bar__side-header__newgroup
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'icon')
    .groups
      - current_user.groups.each do |group|
        .group
          = link_to "#"  do
            .group__name
              = group.name
            .group__message
